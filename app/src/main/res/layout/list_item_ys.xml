<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/list_item_ys_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:textStyle="bold"
            android:padding="4dp"
            tools:text="Name"/>

        <TextView
            android:id="@+id/list_item_ys_address_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="4dp"
            tools:text="Address"/>

        <TextView
            android:id="@+id/list_item_ys_phone_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="4dp"
            tools:text="Phone"/>

        <TextView
            android:id="@+id/list_item_ys_link_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:padding="4dp"
            tools:text="Weblink"/>

</RelativeLayout>